{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="article-content">
			<h1 class="article-h1 u-visually-hidden">{{post.title}}</h1>
			<div class="article-body">
				{{post.content}}
			</div>
			<div class="wall">
				{% for item in wall %}
					{% set link = item.link %}
					{% for item in item.gallery %}
						<div class="wall__item">
							<a href="{{link}}">
								<img class="wall__img" src="{{Image(item).src('thumbnail')}}" alt="Thumbnail for wall item {{item}}">
							</a>
						</div>
					{% endfor %}
				{% endfor %}
			</div>
		</section>
	</article>
{% endblock %}